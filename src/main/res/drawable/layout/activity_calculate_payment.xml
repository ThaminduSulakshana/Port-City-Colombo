<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/header_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Book Tickets"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@color/purple_500"
        android:textSize="24sp" />
    <!--Back button-->


    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back_white" />

    <EditText
        android:id="@+id/ticket_input"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_textview"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="56dp"
        android:hint="Number of Tickets"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/price_input"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ticket_input"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="36dp"
        android:hint="Price per Ticket"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_input"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="36dp"
        android:text="Amount to Pay: 0.00"
        android:textAlignment="center"
        android:textSize="20dp" />
<!--calculate-->
    <Button
        android:id="@+id/calculate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_text"
        android:textSize="20dp"
        android:layout_marginLeft="90dp"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:text="Calculate"/>


    <!--Next-->
    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calculate_button"
        android:textSize="15dp"
        android:layout_marginLeft="120dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:text="Next"/>

</RelativeLayout>
